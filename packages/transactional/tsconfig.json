{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../ts-config/base.json",
  "compilerOptions": {
    "noEmit": false,
    "strict": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "declaration": true,
    "jsx": "react",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "incremental": false,
    "resolveJsonModule": false,
    "target": "ES2022",
    "outDir": "./dist",
    "baseUrl": "./src"
  },
  "include": ["."],
  "exclude": ["node_modules", "dist", ".react-email"]
}
